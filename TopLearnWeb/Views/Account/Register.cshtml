@using TopLearn.Core.DTOs
@model RegisterViewModel

@{
    ViewData["Title"] = "ثبت نام";
}

<div id="contact" class="contact_area section-padding">
    <div class="container">
        <!-- Center the card on the screen -->
        <div class="row justify-content-center">
            <!-- Card with centered form inside -->
            <div class="col-12 col-md-8 col-lg-6 col-xl-4">
                <!-- Card with border and padding -->
                <div class="card shadow-lg border border-primary p-3">
                    <div class="card-body">
                        <div class="wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.2s" data-wow-offset="0" style="visibility: visible; animation-duration: 1s; animation-delay: 0.2s; animation-name: fadeInUp;">
                            <div class="contact">
                                <h3 class="text-center">ثبت نام</h3>
                                <br />
                                <form id="registrationForm" class="form" asp-action="Register" method="post">
                                    <div class="row">
                                        <div class="form-group col-md-12">
                                            <label asp-for="UserName">
                                                نام کاربری
                                                <span asp-validation-for="UserName" class="text-danger"></span>
                                            </label>
                                            <input asp-for="UserName" class="form-control" placeholder="نام کاربری">
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label asp-for="Email">
                                                ایمیل
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </label>
                                            <input asp-for="Email" class="form-control" placeholder="آدرس ایمیل">
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label asp-for="PassWord">
                                                کلمه عبور
                                                <span asp-validation-for="PassWord" class="text-danger"></span>
                                            </label>
                                            <input type="password" asp-for="PassWord" class="form-control" placeholder="کلمه عبور">
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label asp-for="RePassWord">
                                                تکرار کلمه عبور
                                                <span asp-validation-for="RePassWord" class="text-danger"></span>
                                            </label>
                                            <input type="password" asp-for="RePassWord" class="form-control" placeholder="تکرار کلمه عبور">
                                        </div>
                                        <div class="col-md-12 text-center">
                                            <button type="submit" class="btn btn_one">ثبت نام</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

