@using TopLearn.Core.DTOs;
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<br />
<br />
<div id="contact" class="contact_area section-padding">
    <div class="container">
        <!-- Center the card on the screen -->
        <div class="row justify-content-center">
            <!-- Card with centered form inside -->
            <div class="col-12 col-md-8 col-lg-6 col-xl-4">
                <!-- Card with border and padding -->
                <div class="card shadow-lg border border-primary p-3">
                    <div class="card-body">
                        <div class="wow fadeInUp" data-wow-duration="1s" data-wow-delay="0.2s" data-wow-offset="0" style="visibility: visible; animation-duration: 1s; animation-delay: 0.2s; animation-name: fadeInUp;">
                            <div class="contact">
                                <h3 class="text-center">ورود</h3>
                                <br />
                                @if (ViewBag.IsSuccess != null)
                                {
                                    <div class="alert alert-success" style="margin: 0 auto; text-align: center; max-width: 600px;">
                                        <p>ورود با موفقیت انجام شد</p>
                                        <p>در حال انتقال به صفحه اصلی</p>

                                    </div>
                                    <script>
                                        var delay = 3000;
                                        setTimeout(function () { window.location = "/"; }, delay);
                                    </script>
                                }
                                @if (ViewBag.EditProfile == true)
                                {
                                    <div class="alert alert-warning" style="margin: 0 auto; text-align: center; max-width: 600px;">
                                        تغییرات اعمال شدند لطفا مجددا وارد شوید
                                    </div>
                                }
                                <form id="registerForm" class="form" asp-action="Login" method="post">
                                    <div class="row">
                                        <div class="form-group col-md-12">
                                            <label asp-for="Email">
                                                ایمیل
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </label>
                                            <input asp-for="Email" class="form-control" placeholder="آدرس ایمیل">
                                        </div>
                                        <div class="form-group col-md-12">
                                            <label asp-for="PassWord">
                                                کلمه عبور
                                                <span asp-validation-for="PassWord" class="text-danger"></span>
                                            </label>
                                            <input type="password" asp-for="PassWord" class="form-control" placeholder="کلمه عبور">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="RememberMe" class="d-flex align-items-center">
                                            <input asp-for="RememberMe" type="checkbox" style="width: 18px; height: 18px; margin-left: 10px;" />مرا به خاطر بپسار
                                        </label>
                                    </div>
                                    <div dir="rtl">
                                        <a asp-controller="Account" asp-action="ForgotPassWord">فراموشی رمز عبور</a>
                                    </div>
                                    <br />
                                    <div class="col-md-12 text-center">
                                        <button type="submit" class="btn btn_one">ورود</button>
                                    </div>
                                </form>
                            </div>
                        </div>

                        <br />

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
